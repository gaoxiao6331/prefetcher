{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
          "@/*": ["src/*"]
        } 
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "src/**/*",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}